<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:gravity="center"
    tools:context=".ui.theme.agenda.CancelarActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtNomeProf"
        android:textSize="25dp"
        android:layout_margin="30dp"
        android:textColor="@color/black"
        android:text="Professor Fulano de Tal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtData"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/fatec"
        android:text="15/11"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtAmb"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textColor="@color/fatec"
        android:text="Ambiente"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHora"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textColor="@color/fatec"
        android:text="11:10"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:id="@+id/btnCancelar"
        android:text="Cancelar Reserva"
        android:backgroundTint="@color/btnVermelho"/>

</androidx.appcompat.widget.LinearLayoutCompat>